<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <TextView
            android:text="@string/defaults"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:id="@+id/nome" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_picture" android:layout_marginStart="20dp"
    />
    <ImageView
            android:layout_width="128dp"
            android:layout_height="wrap_content" tools:srcCompat="@drawable/gameicon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/game_picture"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:contentDescription="@string/game_picture" android:adjustViewBounds="true"
            android:drawingCacheQuality="high"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" app:srcCompat="@drawable/gameicon"/>
    <TextView
            android:text="@string/defaults"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:id="@+id/Prezzo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nome"
            app:layout_constraintStart_toEndOf="@+id/game_picture"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="@string/defaults"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:id="@+id/Luogo" app:layout_constraintStart_toEndOf="@+id/game_picture"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Prezzo"
    />
</android.support.constraint.ConstraintLayout>