<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragment_inserimento" android:id="@+id/frameLayout4">
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="67dp"
            android:layout_height="80dp"
            android:id="@+id/foto"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/foto2" android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="79dp"
            android:layout_height="84dp"
            android:id="@+id/foto2"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/foto1"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toStartOf="@+id/foto"
    />
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="94dp"
            android:layout_height="89dp"
            android:id="@+id/foto6"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/foto2" app:layout_constraintStart_toEndOf="@+id/foto5"
            android:layout_marginStart="55dp"/>
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="85dp"
            android:layout_height="84dp"
            android:id="@+id/foto5"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/foto2"
            app:layout_constraintStart_toEndOf="@+id/foto4" android:layout_marginStart="80dp"
    />
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="92dp"
            android:layout_height="83dp"
            android:id="@+id/foto1"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/foto2" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Inserisci gioco"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:bufferType="normal" android:capitalize="words" android:textStyle="bold"/>
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="72dp"
            android:layout_height="92dp"
            android:id="@+id/foto4"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/foto1"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="Nome"
            android:ems="10"
            android:id="@+id/nome_gioco" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="14sp"/>
    <TextView
            android:text="Inserisci foto: (max6)"
            android:layout_width="160dp"
            android:layout_height="26dp"
            android:id="@+id/textView3" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/nome_gioco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="390dp"
            android:layout_height="91dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/descrizione_gioco"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/foto5"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:text="Descrizione "/>
</android.support.constraint.ConstraintLayout>