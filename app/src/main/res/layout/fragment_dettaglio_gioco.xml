<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".dettaglio_gioco" android:id="@+id/frameLayout2">
    <ImageView
            android:layout_width="92dp"
            android:layout_height="87dp" tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:id="@+id/picture0" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/luogo_dettaglio"/>
    <ImageView
            android:layout_width="92dp"
            android:layout_height="87dp" tools:src="@tools:sample/avatars"
            android:id="@+id/picture1"
            app:layout_constraintBottom_toBottomOf="@+id/picture0"
            app:layout_constraintStart_toEndOf="@+id/picture0" android:layout_marginStart="40dp"/>
    <TextView
            android:text="Nome"
            android:layout_width="355dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/nome_dettaglio"
            android:layout_marginStart="16dp" android:textSize="30sp" android:textStyle="bold"/>
    <TextView
            android:text="prezzo"
            android:layout_width="115dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/prezzo_dettaglio" app:layout_constraintTop_toBottomOf="@+id/nome_dettaglio"
            android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.051" android:textSize="24sp"
            android:textColor="@color/nintendo"/>
    <TextView
            android:text="Luogo"
            android:layout_width="123dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/luogo_dettaglio" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/prezzo_dettaglio" android:layout_marginStart="16dp"
            android:textSize="18sp"/>
    <ImageView
            android:layout_width="92dp"
            android:layout_height="87dp" tools:src="@tools:sample/avatars"
            android:id="@+id/picture2"
            app:layout_constraintBottom_toBottomOf="@+id/picture1"
            app:layout_constraintStart_toEndOf="@+id/picture1" android:layout_marginStart="36dp"/>
    <TextView
            android:text="Descrizione"
            android:layout_width="355dp"
            android:layout_height="58dp"
            android:id="@+id/textView5" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/picture0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>